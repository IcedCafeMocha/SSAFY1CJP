<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.project.dao.ReviewDao">

   <!--영상 youtubeId를 통해 영상 리뷰 작성-->
   <insert id="insertReview" parameterType="Review">
      INSERT INTO SSAFIT_review
      (youtube_id,user_id,title,content)
      VALUES(#{youtubeId},#{userId},#{title},#{content})
   </insert>
   
   <!--한 Video의 전체 리뷰 선택-->
   <select id="selectAll">
      SELECT * FROM SSAFIT_review WHERE youtube_id= #{youtubeId}
   </select>
   
   <!--전체 리뷰에서 특정 리뷰 선택-->
   <select id="selectOne">
      SELECT * FROM SSAFIT_review WHERE review_No = #{reviewNo}
   </select>
   
   <!--리뷰 삭제-->
   <delete id="deleteReview">
      DELETE FROM SSAFIT_review WHERE review_No = #{reviewNo}
   </delete>
   
   <!--리뷰 수정-->
   <update id="updateReview">
      UPDATE SSAFIT_review SET title = #{review.title}, content = #{review.content} WHERE
      review_No = #{reviewNo}
   </update>
   
   <!--조회수 증가-->
   <update id="updateViewCnt">
      UPDATE SSAFIT_review SET view_cnt = view_cnt + 1 WHERE
      review_No = #{reviewNo}
   </update>
</mapper>